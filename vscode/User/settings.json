{
    // Editor Configs
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "editor.formatOnPaste": true,
    "editor.tabSize": 2,
    "editor.fontSize": 16,
    "editor.scrollBeyondLastLine": true,
    "editor.wordWrap": "off",
    "editor.fontFamily": "'Cascadia Code', Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.suggestSelection": "first",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.rulers": [ 140 ],

    // Code Formatting
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[javascriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "javascript.format.enable": true,
    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
    "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
    "javascript.implicitProjectConfig.checkJs": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "emmet.includeLanguages": {
        "vue-html": "html",
        "javascript": "javascriptreact",
        "typescript": "typescriptreact",
        "erb": "html",
        "twig": "html"
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.hotExit": "off",
    "files.autoSave": "off",
    "ruby.intellisense": "rubyLocate",
    "search.exclude": {
        "**/vendor/gems/**": true
    },
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
    "terminal.integrated.shellArgs.osx": ["-l"],
    "terminal.integrated.env.osx": {},
    "terminal.integrated.fontFamily": "'Cascadia Code', Menlo, Monaco, monospace",
    "terminal.integrated.fontSize": 15,
    "window.title": "${activeEditorFull}${separator}${rootName}",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Tomorrow Night Eighties",
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.sideBar.location": "right",
    "git.autofetch": true,
    "workbench.colorCustomizations": {
        "[Tomorrow Night Eighties]": {
            "activityBar.background": "#242424",
            "activityBar.activeBackground": "#00A000",
            "statusBar.background": "#00A000",
        }
    },
    "files.associations": {
        "vimrc": "viml",
        "*.twig": "twig",
    },
    "html.format.wrapLineLength": 140,
    "gitlens.advanced.telemetry.enabled": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "java.semanticHighlighting.enabled": true,
    "cSpell.userWords": [
        "camelize",
        "signup"
    ],
    "mssql.connections": [
        {
            "server": "{{put-server-name-here}}",
            "database": "{{put-database-name-here}}",
            "user": "{{put-username-here}}",
            "password": "{{put-password-here}}"
        }
    ]
}
