[alias]
  ec = config --global -e
  ex = "!${EDITOR:-vi} .git/info/exclude"
  ea = "!${EDITOR:-vi} ~/.config/git/aliases"

  r = reset
  f = fetch
  cl = clone
  st = status
  cp = cherry-pick
  ls = ls-files
  ref = reflog
  stashes = stash list
  up = pull --rebase --autostash
  bb = blame -w -C -C -C
  safe-push = push --force-with-lease
  sp = push --force-with-lease

  br = branch
  brr = branch -r
  bra = branch -a
  bd = branch -d
  bdd = branch -D

  d = diff
  dc = diff --cached
  ds = diff --stat
  dp = diff --patience
  dk = diff --check
  dck = diff --cached --check
  dt = difftool

  ci = commit -m
  cx = commit --no-verify -m
  cam = commit --amend --no-edit

  co = checkout
  cob = checkout -b
  sw = switch
  swc = switch --create

  unstage = reset
  uncommit = reset --soft HEAD^

  rmf = rm -f
  rmrf = rm -r -f

  wt = worktree
  wtl = worktree list
  wta = worktree add
  wtr = worktree remove
  trees = worktree list

  # View abbreviated SHA, description, and history graph of the latest 20 commits
  l = "!git log --graph -n 20 --pretty=\"%C(yellow)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset\" | nl -v1 | bat --style=grid"
  ll = log --graph --pretty="'%C(yellow)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset'"
  ld = log --graph -n 20 --numstat --pretty="'%C(yellow)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset'"

  # list aliases with colored output and syntax highlighting
  la = "!git config -l | grep alias | cut -c 7- | bat --language=gitconfig --style=numbers,grid"

  # fzf - Interactive git log browser (see git/scripts/git-fzf)
  fzf = "!~/.config/git/scripts/git-fzf"

	cleanup-branches = !git branch --format=\"%(refname:short)\" | grep -v \"$(git branch --show-current)\" | fzf --multi --preview \"git log --oneline --graph --date=short\n  --pretty=format:%C(auto)%cd_%h%d_%s {} | head -50\" | xargs -r git branch -D
