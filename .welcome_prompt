#-------------------------------------------------------------------------------
# Welcome Prompt
# prints stats on terminal load
#-------------------------------------------------------------------------------
welcome_prompt=true

function welcome_msg() {
  echo "------------------------------------------"
  echo $(git --version)
  echo $(brew -v)
  echo $(ruby -v)
  echo $(psql --version)
  echo $(rails -v)
  echo $(heroku --version)
  echo "------------------------------------------"
  echo "type ${BOLD}unwelcome${RESET} to remove this message"
}

if [ $welcome_prompt == true ]; then welcome_msg; fi
